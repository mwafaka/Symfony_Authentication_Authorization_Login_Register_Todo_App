{% extends 'base.html.twig' %}
{% block title %}todo app{% endblock %}
{% block body %}

		<div class="container mt-5">
			<h1 class="text-center mb-4">Todo List</h1>
			{# <a href="/{{app.user? 'logout':'login'}}">
				{{app.user? 'logout' : 'login'}}<a/> #}
				{% if app.user %}
					<div class="text-right mb-3">
						<a href="{{ path('todo_create') }}" class="btn btn-success">Create New Todo</a>
					</div>
				{% endif %}


				<ul class="list-group">
					{% for todo in todos %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span {% if todo.completed %} style="text-decoration: line-through;" {% endif %}>{{ todo.title }}</span>
							<div>
								<a href="{{ path('todo_toggle', {id: todo.id}) }}" class="btn btn-warning btn-sm">Toggle</a>
								<a href="{{ path('todo_delete', {id: todo.id}) }}" class="btn btn-danger btn-sm ml-2">Delete</a>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>

			<!-- Include Bootstrap JS from CDN (optional for better functionality) -->
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		{% endblock %}


